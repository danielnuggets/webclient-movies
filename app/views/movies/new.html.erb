<h3>Add a new movie</h3>

<%= form_tag '/movies', method: :post do %>
<div>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
</div>
<div>
  <%= label_tag :duration %>
  <%= text_field_tag :duration %>
</div>
<div>
  <%= label_tag :genre %>
  <%= text_field_tag :genre %>
</div>
<div>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
<div>
  <%= submit_tag 'Add Movie' %>
<% end %>
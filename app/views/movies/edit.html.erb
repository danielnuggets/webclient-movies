<h3>Edit this movie</h3>

<%= form_tag "/movies/#{@movie.id}", method: :patch do %>
<div>
  <%= label_tag :title %>
  <%= text_field_tag :title, @movie.title %>
</div>
<div>
  <%= label_tag :duration %>
  <%= text_field_tag :duration, @movie.duration %>
</div>
<div>
  <%= label_tag :genre %>
  <%= text_field_tag :genre, @movie.genre %>
</div>
<div>
  <%= label_tag :description %>
  <%= text_field_tag :description, @movie.description %>
<div>
  <%= submit_tag 'Update Movie' %>
<% end %>